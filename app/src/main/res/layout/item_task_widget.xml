<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_task_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/bg_radius_32_red"
    android:gravity="center_vertical">

    <!-- Icon nhiệm vụ (nếu bạn muốn hiển thị) -->
    <ImageView
        android:id="@+id/iconTask"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/write"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/txtImg" />

    <!-- Tiêu đề nhiệm vụ -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tiêu đề nhiệm vụ"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end" />
</LinearLayout>
